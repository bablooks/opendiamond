ROOTDIR = @top_srcdir@
SRCDIR = @srcdir@
VPATH = @srcdir@
OBJROOT = @OBJROOT@

LIBS += -ldl  -lpthread -lfilterexec -lfl -Wl,-whole-archive 
LIBS += -lfilter -llog -lodisk -Wl,-no-whole-archive
LIBS += -lsstub -ltools -ldctl -lm -lssl -lcrypto -ldconfig
LIBS += -lglib-2.0

SRCS = adiskd.c search_state.c background.c
OBJS = adiskd.o search_state.o background.o

#
# Compilation Targets
#

TARGETS = adiskd@EXPERIMENTALSUFFIX@

SHARED_BIN = adiskd@EXPERIMENTALSUFFIX@

include $(OBJROOT)/Makefile.template

adiskd@EXPERIMENTALSUFFIX@:  $(OBJS)
	$(CC) $(CFLAGS) -o $@ -rdynamic $(OBJS) $(LIBDIR) $(LIBS)




