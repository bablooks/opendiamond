ROOTDIR = @top_srcdir@
VPATH = @srcdir@
OBJROOT = @OBJROOT@


SHARED_HEADERS = lib_log.h

LIBSRCS = lib_log.c
LIBOBJS = lib_log.o
TESTSRCS = test_log.c
TESTOBJS = test_log.o
TESTPROGS = test_log 

SRCS = $(LIBSRCS) $(TESTSRCS)
OBJS = $(LIBOBJS) $(TESTOBJS)

#
# Compilation Targets
#

TARGETS = liblog.a $(TESTPROGS)

include $(ROOTDIR)/Makefile.template

test_log: liblog.a $(TESTOBJS)
	$(CC) $(CFLAGS) -o test_log $(TESTOBJS) -L. -llog -lpthread
