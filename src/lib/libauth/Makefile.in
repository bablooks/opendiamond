ROOTDIR = @top_srcdir@
SRCDIR = @srcdir@
VPATH = @srcdir@
OBJROOT = @OBJROOT@

CFLAGS += -I$(ROOTDIR)

LIBOBJS = lib_auth.o

LIBS += -lkrb5 -llog -lpthread

SRCS = lib_auth.c

TEST_OBJS = actest.o astest.o
OBJS = $(LIBOBJS) $(TEST_OBJS)

SHARED_HEADERS = lib_auth.h

# Compilation Targets
#

TARGETS = libauth.a actest astest

include $(OBJROOT)/Makefile.template 

actest:  actest.o libauth.a
	$(CC) $(CFLAGS) -o actest actest.o libauth.a $(LIBDIR) $(LIBS)

astest:  astest.o libauth.a
	$(CC) $(CFLAGS) -o astest astest.o libauth.a $(LIBDIR) $(LIBS)

	
