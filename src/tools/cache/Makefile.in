ROOTDIR = @top_srcdir@
SRCDIR = @srcdir@
VPATH = @srcdir@
OBJROOT = @OBJROOT@

CPPFLAGS += `pkg-config glib-2.0 --cflags`

LIBS += -ltools -ldconfig -lssl
LIBS += `pkg-config glib-2.0 --libs`

DCACHE_SRCS = dcache.c centry.c
DCACHE_OBJS = dcache.o centry.o

MCACHE_SRCS = mcache.c centry.c
MCACHE_OBJS = mcache.o centry.o

SRCS = $(DCACHE_SRCS) $(MCACHE_SRCS) 
OBJS = $(DCACHE_OBJS) $(MCACHE_OBJS)

TARGETS = dcache mcache

SHARED_BIN = dcache mcache


include $(OBJROOT)/Makefile.template

#
#

dcache: $(DCACHE_OBJS)
	$(CC) $(CFLAGS) -o dcache $(DCACHE_OBJS) $(LIBDIR) $(LIBS)

mcache: $(MCACHE_OBJS)
	$(CC) $(CFLAGS) -o mcache $(MCACHE_OBJS) $(LIBDIR) $(LIBS)
	